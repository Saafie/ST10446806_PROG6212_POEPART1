<Window x:Class="ST10446806_PROG6212_POEPART1.LecturerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claims" Height="611" Width="728"
        WindowStartupLocation="CenterScreen" Background="#FFC0CB">

    <StackPanel Margin="10">
        <TextBlock Text="Submit New Claim" FontSize="16" FontWeight="DemiBold" Margin="5"/>
        <TextBlock Text="Hourly rates: " Width="257" Margin="5,0,450,0" Height="21"/>
        <TextBox x:Name="HourlyRateBox" Width="100" Background="#FFF0F2" HorizontalAlignment="Left" />

        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Hours: " Width="53"  />
            <TextBox Name="HoursBox" Width="100" Background="#FFF0F2"/>
        </StackPanel>

        <!-- Documents Upload Section -->
        <TextBlock Text="Supporting Documents:" FontWeight="Bold" Margin="0,5"/>
        <ItemsControl x:Name="DocumentsList" ItemsSource="{Binding SelectedDocumentPaths}" Margin="0,0,0,5">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FFC0CB" CornerRadius="5" Margin="2" Padding="5" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                            <TextBlock Text=" X" Foreground="Black" Cursor="Hand" Margin="5,0,0,0"
                                       MouseDown="RemoveDocument_MouseDown"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Content="Upload Document(s)" Width="200" Height="25" Click="UploadDocument_Click" HorizontalAlignment="Left" Background="#FFF0F2"/>
        <Button Content="Submit Claim" Width="200" Height="35" Margin="15" Click="Submit_Click" Background="#FFF0F2"/>


        <TextBlock Text="My Claims" FontSize="16" FontWeight="DemiBold" Margin="2"/>

        <ListView x:Name="ClaimList"
                  Height="200" Background="#FFF0F2" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding ClaimID}" />
                    <GridViewColumn Header="Hours" Width="80" DisplayMemberBinding="{Binding TotalHours}" />
                    <GridViewColumn Header="Amount (R)" Width="100" DisplayMemberBinding="{Binding Amount}" />
                    <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Status}" />
                    <GridViewColumn Header="Date" Width="125" DisplayMemberBinding="{Binding DateFormatted}" />
                    <GridViewColumn Header="Documents" Width="200">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Documents}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=.}" 
                                               TextDecorations="Underline" 
                                               Foreground="Blue" 
                                               Cursor="Hand" 
                                               Margin="0,0,5,0"
                                               MouseDown="Document_Click"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="LogOut" Width="200" Height="32" Margin="15" Click="LogoutButton" Background="#FFF0F2"/>
    </StackPanel>
</Window>
