<Window x:Class="ST10446806_PROG6212_POEPART1.LecturerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10446806_PROG6212_POEPART1"
        mc:Ignorable="d"
        Title="Lecturer Claims" Height="500" Width="600">
    <StackPanel Margin="10">
        <TextBlock Text="Submit New Claim" FontSize="16" Margin="5"/>
        <TextBlock Text="Hourly rates: 350 " Width="152" Margin="5,0,450,0"/>
        <StackPanel Orientation="Horizontal" Margin="5">
            
            <TextBlock Text="Hours: " Width="53"/>
            <TextBox Name="HoursBox" Width="100"/>
        </StackPanel> 
        <Button Content="Upload Supporting Document" Width="200" Height="25" HorizontalAlignment="Left"/>
        <Button Content="Submit Claim" Width="200" Height="35" Margin="15"/>
        <TextBlock Text="My Claims" FontSize="16" Margin="2"/>
        
        <ListBox x:Name="ListofClaims" Height="210" >
        <ListBoxItem>
            <StackPanel Orientation="Horizontal" Margin="5" >
                    <TextBlock Text="Claim ID: 1 | 13h | R4550 | Submission Pending" VerticalAlignment="Center" Width="280"/>
                </StackPanel>
        </ListBoxItem>

        <ListBoxItem>
            <StackPanel Orientation="Horizontal" Margin="5" >
                <TextBlock Text="Claim ID: 2 | 2h | R4550 | Rejected by Coordinator" VerticalAlignment="Center" Width="280"/>
            </StackPanel>
        </ListBoxItem>

        <ListBoxItem>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Claim ID: 3 | 2 | R750 | Approved by coordinator" VerticalAlignment="Center" Width="280"/>
            </StackPanel>
        </ListBoxItem>
        </ListBox>

            <Button Content="Close" Width="90" Height="30" Margin="0,10,0,0" Click="CloseButton"/>
    </StackPanel>
</Window>
