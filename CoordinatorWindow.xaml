<Window x:Class="ST10446806_PROG6212_POEPART1.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Review" Height="400" Width="500" Background="#BCEFF5">


    <StackPanel Margin="10">
        <TextBlock Text="Pending Claims" FontSize="16" FontWeight="DemiBold" Margin="5"/>


        <ListBox Height="250" Background="#D4F6FA">

            <!--1st Claim-->
            <ListBoxItem>
            <StackPanel Orientation="Horizontal" Margin="5" >
                <TextBlock Text="Claim ID: 1 | 13h | R4550 | Submission Pending" VerticalAlignment="Center" Width="280"/>
                    <Button Content="Approve" Width="70" Margin="5,0" Background="#BCEFF5"/>
                    <Button Content="Reject" Width="70" Margin="5,0" Background="#BCEFF5"/>
                    </StackPanel>
            </ListBoxItem>
            
            <!--2nd Claim-->
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="5" >
                    <TextBlock Text="Claim ID: 2 | 8h | R2800 | Rejected by Coordinator" VerticalAlignment="Center" Width="280"/>
                </StackPanel>
            </ListBoxItem>
            
            <!--3rd Claim-->
            <ListBoxItem>
       
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Claim ID: 3 | 2 | R750 | Approved by coordinator" VerticalAlignment="Center" Width="280"/>
                </StackPanel>
        </ListBoxItem>

    </ListBox>

        <!-- This is the Close button -->
        <Button Content="Close" Width="100" Height="30" Margin="0,20,0,0" Click="CloseButton" Background="#D4F6FA"/>
    </StackPanel>
</Window>
