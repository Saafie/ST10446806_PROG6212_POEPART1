<Window x:Class="ST10446806_PROG6212_POEPART1.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Review" Height="518" Width="829"
        WindowStartupLocation="CenterScreen" Background="#BCEFF5">

    <StackPanel Margin="10">
        <TextBlock Text="Pending Claims" FontSize="16" Margin="5"/>

        <ListView x:Name="PendingList"
                  Height="351" Background="#D4F6FA" Margin="0,10,0,0" Width="807">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Claim ID" Width="70" DisplayMemberBinding="{Binding ClaimID}" />
                    <GridViewColumn Header="Lecturer ID" Width="100" DisplayMemberBinding="{Binding LecturerID}" />
                    <GridViewColumn Header="Hours" Width="70" DisplayMemberBinding="{Binding TotalHours}" />
                    <GridViewColumn Header="Amount (R)" Width="100" DisplayMemberBinding="{Binding Amount}" />
                    <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Status}" />
                    <GridViewColumn Header="Documents" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Documents}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                       TextDecorations="Underline"
                                       Foreground="Blue" 
                                       Cursor="Hand" 
                                       Margin="0,0,5,0"
                                       MouseDown="Document_Click"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Actions Column -->
                    <GridViewColumn Header="Actions" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Approve" Margin="2" 
                        Click="Approve_Click" 
                        Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <!-- Default blue background -->
                                                <Setter Property="Background" Value="#D4F6FA"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Coordinator Approved">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="Reject" Margin="2" 
                        Click="Reject_Click" 
                        Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <!-- Default blue background -->
                                                <Setter Property="Background" Value="#D4F6FA"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Coordinator Approved">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>

            <!-- Apply custom header style -->
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background" Value="#BCEFF5"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="6,4"/>
                </Style>
            </ListView.Resources>
        </ListView>

        <!-- Close button -->
        <Button Content="Close" Width="100" Height="30" Margin="0,20,0,0" 
                Click="Logout_Click" Background="#D4F6FA"/>
    </StackPanel>
</Window>
