
<Window x:Class="ST10446806_PROG6212_POEPART1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameBox" Margin="0,5,0,10" Background="#FFF0F2"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,20" Background="#FFF0F2"/>

            <Button x:Name="LoginButton" Content="Login" Height="30" Click="LoginButton_Click" Background="#FFE3E8"/>
        </StackPanel>
    </Grid>
</Window>

